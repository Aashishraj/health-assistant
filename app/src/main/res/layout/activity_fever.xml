<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_launcher_background"
    android:backgroundTint="#1F1E20"
    tools:context=".Fever">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="401dp"
        android:layout_height="260dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Predict Disease"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/predict_disease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#DAD0D0"
        android:text="Predict"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.881" />

    <Spinner
        android:id="@+id/symp1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/symp2"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.68"
        tools:layout_editor_absoluteX="0dp" />

    <Spinner
        android:id="@+id/symp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/symp3"
        tools:layout_editor_absoluteX="0dp" />

    <Spinner
        android:id="@+id/symp3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.416"
        tools:layout_editor_absoluteX="0dp" />

    <Spinner
        android:id="@+id/symp4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/predict_disease"
        app:layout_constraintTop_toBottomOf="@+id/symp5"
        app:layout_constraintVertical_bias="0.701"
        tools:layout_editor_absoluteX="0dp" />

    <Spinner
        android:id="@+id/symp5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/symp4"
        app:layout_constraintTop_toBottomOf="@+id/symp3"
        app:layout_constraintVertical_bias="0.597"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>